{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "DLP Rule Engine V2",
  "type": "object",
  "properties": {
    "rules": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "id": {"type": "string"},
          "priority": {"type": "integer"},
          "severity": {"type": "string"},
          "conditions": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "field": {"type": "string"},
                "op": {"type": "string"},
                "value": {"type": "string"}
              },
              "required": ["field", "op", "value"]
            }
          },
          "actions": {
            "type": "array",
            "items": {"type": "string", "enum": ["allow", "alert", "block", "quarantine"]}
          },
          "chain_to": {
            "type": "array",
            "items": {"type": "string"}
          }
        },
        "required": ["id", "priority", "conditions", "actions"]
      }
    }
  },
  "required": ["rules"]
}
