<?xml version="1.0" encoding="utf-8"?>
<ServiceInstaller>
  <ServiceName>DlpAgent</ServiceName>
  <DisplayName>DLP Agent</DisplayName>
  <Description>Endpoint DLP Agent Service</Description>
  <StartType>SERVICE_AUTO_START</StartType>
  <ServiceType>SERVICE_WIN32_OWN_PROCESS</ServiceType>
  <FailureActions>
    <ResetPeriod>86400</ResetPeriod>
    <RebootMessage />
    <Command />
    <Actions>
      <Action>RestartService</Action>
      <DelayMs>5000</DelayMs>
      <Action>RestartService</Action>
      <DelayMs>30000</DelayMs>
      <Action>RestartService</Action>
      <DelayMs>60000</DelayMs>
    </Actions>
  </FailureActions>
  <Security>
    <ServiceSidType>Restricted</ServiceSidType>
    <LaunchProtected>Windows</LaunchProtected>
    <RequiredPrivileges>
      <Privilege>SeChangeNotifyPrivilege</Privilege>
      <Privilege>SeAuditPrivilege</Privilege>
    </RequiredPrivileges>
    <Acl>
      <Grant>User=SYSTEM;Rights=FullControl</Grant>
      <Grant>User=Administrators;Rights=Read</Grant>
      <Deny>User=Everyone;Rights=Write</Deny>
    </Acl>
  </Security>
  <Isolation>
    <Enable>True</Enable>
    <Network>Restricted</Network>
  </Isolation>
</ServiceInstaller>
